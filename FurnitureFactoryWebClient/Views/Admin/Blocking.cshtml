
@{
    ViewData["Title"] = "Блокировка";
}
<div class="text-center text-info">
    <h1>Блокировка</h1>
</div>
<h1>Blocking</h1>
@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Отчество</td>
            <td>Почта</td>
            <td>Блокировка</td>
            <td>Заблокировать/разблокировать</td>
        </tr>
        @foreach (var client in ViewBag.Clients)
        {
            <tr>
                <td>@client.SecondName</td>
                <td>@client.FirstName</td>
                <td>@client.Patronymic</td>
                <td>@client.Email</td>
                <td>@client.Block</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Admin/Block/@client.Id">Заблокировать/разблокировать</a>
                </td>
            </tr>
        }
    </table>
}
